<theme>

  <element name="StyledText"
      description="StyledText control">
    
    <property name="color"
        type="color"
        description="Text color for StyledText control." />
    
    <property name="background-color"
        type="color"
        description="Background color for StyledText control." />
        
    <property name="font"
        type="font"
        description="Font for StyledText control text." />
        
    <property name="padding"
        type="boxdim"
        description="Padding between the border and the inner text." />    
        
    <property name="border"
        type="border"
        description="StyledText border" />
        
    <style name="BORDER"
        description="Style constant for bordered behavior." />

  </element>

</theme>