<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            description="%activity.description"
            id="org.eclipse.rap.ui.rapPluginDevelopment"
            name="%activity.name">
      </activity>

      <categoryActivityBinding
            activityId="org.eclipse.rap.ui.rapPluginDevelopment"
            categoryId="org.eclipse.categories.developmentCategory">
      </categoryActivityBinding>

      <defaultEnablement
            id="org.eclipse.rap.ui.rapPluginDevelopment">
      </defaultEnablement>

      <activityRequirementBinding
            activityId="org.eclipse.rap.ui.rapPluginDevelopment"
            requiredActivityId="org.eclipse.plugInDevelopment">
      </activityRequirementBinding>

      <activityPatternBinding
            activityId="org.eclipse.rap.ui.rapPluginDevelopment"
            pattern="org\.eclipse\.rap\.ui\..*/.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="org.eclipse.rap.ui.rapPluginDevelopment"
            pattern="org\.eclipse\.rap\.internal\.ui\..*/.*">
      </activityPatternBinding>
   </extension>
</plugin>
