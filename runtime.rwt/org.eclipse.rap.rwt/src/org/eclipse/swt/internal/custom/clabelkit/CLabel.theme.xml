<theme>

  <element name="CLabel">

    <description>
    RWT CLabel widgets.
    </description>
    
    <property name="color"
        type="color"
        description="Text color for clabels." />

    <property name="background-color"
        type="color"
        description="Background color for clabels." />

    <property name="font"
        type="font"
        description="Text font for clabels." />

    <property name="border"
        type="border"
        description="Border for clabels." />
        
    <property name="border-radius" type="boxdim">
        <description>
          Border radius. The border radius has no effect if an enhanced border,
          like "inset" or "outset" is used.
        </description>
    </property>

    <property name="background-image"
        type="image"
        description="Background image or gradient for CLabel." />
        
    <property name="padding"
        type="boxdim"
        description="Padding for clabels." />
        
    <property name="spacing"
        type="dimension"
        description="Space between text and image." />
        
    <style name="BORDER"
        description="Indicates that the widget should have a border." />

    <state name="hover"
        description="Applies to widgets while the cursor hovers over them." />

    <state name="disabled"
        description="Applies to disabled clabels." />    

  </element>

</theme>
