<theme css-elements="Link">

  <element name="Link"
      description="SWT Link widgets.">

    <property name="font"
        type="font"
        description="Font for link texts." />

    <property name="border"
        type="border"
        description="Border for links." />

    <style name="BORDER"
        description="Indicates that the widget should have a border." />

    <element name="Link-Hyperlink"
        description="Embedded hyperlinks in a Link widget.">

      <property name="color"
          type="color"
          description="Text color for hyperlinks in Link widget." />

    </element>

  </element>


  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->

  <color name="link.foreground"
      description="Text color for hyperlinks in Link widget"
      default="0, 0, 127"
      css-elements="Link-Hyperlink"
      css-property="color" />

</theme>
