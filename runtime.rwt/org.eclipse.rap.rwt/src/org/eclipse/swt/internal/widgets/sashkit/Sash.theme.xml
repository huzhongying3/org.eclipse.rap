<theme>

  <element name="Sash"
      description="Sash control">

    <element name="Sash-Handle">
      <description>
        The place in the middle of the sash.
      </description>

      <property name="background-image"
          description="Background image for sash handle" />

      <state name="horizontal">
        <description>
          Applies while a sash is in horizontal state. This state responds to
          sash SWT.HORIZONTAL style flag.
        </description>
      </state>

      <state name="vertical">
        <description>
          Applies while a sash is in vertical state. This state responds to
          sash SWT.VERTICAL style flag.
        </description>
      </state>

    </element>

  </element>

</theme>
