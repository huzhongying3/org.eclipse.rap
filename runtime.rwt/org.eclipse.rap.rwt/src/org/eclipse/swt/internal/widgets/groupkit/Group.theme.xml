<?xml version="1.0" encoding="iso-8859-1" ?>

<!-- Themeable properties for SWT Groups -->

<theme>

  <!-- Note: Themeing of groups is likely to change in the future, as the group
       widget does not yet adapt to font size changes (Qx bug 507) -->
  
  <boxdim name="group.margin"
      description="Margin for group boxes (space between frame and parent)"
      default="8 0 0"/>

  <boxdim name="group.padding"
      description="Padding for group boxes (space between frame and content)"
      default="8 2 2"/>

  <border name="group.frame.border"
      description="Frame border for group boxes"
      default="1 solid #aca899"/>

  <boxdim name="group.label.margin"
      description="Margin for group box labels (defines offset of the group label)"
      default="1 10"/>

  <boxdim name="group.label.padding"
      description="Padding for group box labels (defines space around group label text)"
      default="0 3 0 4"/>

  // TODO [rst] Inherit does not work properly!
  <font name="group.label.font"
      description="Font for group box labels"
      inherit="widget.font"
      default=""/>

</theme>
