<theme>

  <element name="ToolBar"
      description="Tool bar controls">

    <property name="color"
        type="color"
        description="Text color for tool bar" />

    <property name="background-color"
        type="color"
        description="Background color for tool bar" />

    <state name="disabled"
        description="Applies to disabled tool bars." />

    <element name="ToolItem"
        description="Items of ToolBar controls">

      <property name="color"
          type="color"
          description="Text color for tool bar items" />

      <property name="background-color"
          type="color"
          description="Background color for tool bar items" />

      <property name="border"
          type="border"
          description="Border for tool bar items" />

      <property name="padding"
          type="boxdim"
          description="Padding (inner distance) for tool bar items." />

      <style name="FLAT"
          description="Applies when style FLAT is set on the parent ToolBar." />

      <state name="hover"
          description="Applies on mouse over." />

      <state name="pressed"
          description="Applies while the ToolItem is pressed." />

      <state name="selected"
          description="Applies while the ToolItem is selected (CHECK of RADIO style)." />

      <state name="disabled"
          description="Applies to disabled tool items." />

    </element>

  </element>

</theme>
