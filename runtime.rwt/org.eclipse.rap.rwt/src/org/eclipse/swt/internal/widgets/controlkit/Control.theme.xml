<?xml version="1.0" encoding="iso-8859-1" ?>

<!-- Themeable properties for SWT Controls -->

<theme
    css-elements="NONE">

  <element name="*"
      description="All elements">

    <property name="border"
        styles="BORDER"/>

  </element>

  <!-- C O M P A T I B I L I T Y -->

  <border name="control.border"
      description="Default border for controls"
      default="none"
      css-property="border"
      />

  <border name="control.BORDER.border"
      description="Default border for controls with BORDER style"
      default="2 inset"
      css-property="border"
      css-selectors="[BORDER]"
      />

</theme>
