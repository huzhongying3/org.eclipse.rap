<!-- Themeable properties for SWT Widgets -->

<theme
    css-elements="NONE">

  <!-- C S S   T H E M I N G

    The following section is needed to support the new CSS-based theming.
    It describes the elements this widget adds to the virtual element
    tree which the CSS rules relate to.
    Please note that the syntax is considered preliminary and is still subject
    to change. Also note that this section is not interpreted as long as RAP
    uses the old property-based system internally. We publish it here anyway
    to introduce the new syntax to interested developers soon.

    -->

  <!-- TODO [rst] Does a "*" element makes sense? -->
  <!--element name="*"
      description="All elements">

    <property name="color"
        states="disabled"/>

    <property name="background-color"/>

    <property name="font"/>

    <property name="rwt-shadow-color"
        description="Color used to draw (outer) shadow line in 3d borders"/>

    <property name="rwt-highlight-color"
        description="Color used to draw (outer) highlight line in 3d borders"/>

    <property name="rwt-darkshadow-color"
        description="Color used to draw (inner) shadow line in 3d borders"/>

    <property name="rwt-lightshadow-color"
        description="Color used to draw (inner) highlight line in 3d borders"/>

    <property name="rwt-thinborder-color"
        description="Color for thin lines as shown by Group, TabFolder headers, Table headers, etc."/>

    <property name="rwt-selectionmarker-color"
        description="Color used to mark selected items like TreeColumns and TabViews"/>

  </element-->

  <element name="ToolTip"
      description="Tooltips">

    <property name="color"/>

    <property name="background-color"/>

  </element>

  <!-- C O M P A T I B I L I T Y

    The following section is needed to maintain the deprecated property-based
    theming.

    -->

  <color name="widget.foreground"
      description="Default text color"
      default="0, 0, 0"
      css-property="color"
      />

  <color name="widget.graytext"
      description="Color for text on disabled widgets"
      default="167, 166, 170"
      css-property="color"
      css-selectors=":disabled"
      />

  <!-- 235, 233, 237  == shell.background, control.background ? -->
  <color name="widget.background"
      description="Default background color for widgets"
      default="248, 248, 255"
      css-property="background-color"
      />

  <font name="widget.font"
      description="Default font for most widgets"
      default="11 'Segoe UI', Corbel, Calibri, Tahoma, 'Lucida Sans Unicode', sans-serif"
      css-property="font"
      />

  <color name="widget.info.background"
      description="Background color for tooltips"
      default="255, 255, 225"
      css-elements="Tooltip"
      css-property="background-color"
      />

  <color name="widget.info.foreground"
      description="Text color for tooltips"
      default="0, 0, 0"
      css-elements="Tooltip"
      css-property="color"
      />

  <color name="widget.shadow"
      description="Color used to draw (outer) shadow line in 3d borders"
      default="167, 166, 170"
      css-property="rwt-shadow-color"
      />

  <color name="widget.highlight"
      description="Color used to draw (outer) highlight line in 3d borders"
      default="255, 255, 255"
      css-property="rwt-highlight-color"
      />

  <color name="widget.darkshadow"
      description="Color used to draw (inner) shadow line in 3d borders"
      default="133, 135, 140"
      css-property="rwt-darkshadow-color"
      />

  <color name="widget.lightshadow"
      description="Color used to draw (inner) highlight line in 3d borders"
      default="220, 223, 228"
      css-property="rwt-lightshadow-color"
      />

  <color name="widget.thinborder"
      description="Color for thin lines as shown by Group, TabFolder headers, Table headers, etc."
      default="172, 168, 153"
      css-property="rwt-thinborder-color"
      />

  <color name="widget.selection-marker"
      description="Color used to mark selected items like TreeColumns and TabViews"
      default="254, 200, 60"
      css-property="rwt-selectionmarker-color"
      />

</theme>
