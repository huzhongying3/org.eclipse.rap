<project name="Build specific targets and properties" default="noDefault">

  <!-- ===================================================================== -->
  <!-- Run a given ${target} on all elements being built -->
  <!-- Add on <ant> task for each top level element being built. -->
  <!-- ===================================================================== -->
  <property name="allElementsFile" value="${builder}/allElements.xml"/>
  <import file="${allElementsFile}" />
  <target name="allElements">
    <antcall target="allElementsDelegator" />
  </target>

  <!-- ===================================================================== -->
  <!-- ===================================================================== -->
  <target name="getBaseComponents" depends="checkLocalBase" unless="skipBase">
    <get src="${eclipseBaseURL}" dest="${buildDirectory}/../temp-base.zip" />
    <unzip dest="${base}" overwrite="true" src="${buildDirectory}/../temp-base.zip" />
  </target>

  <target name="checkLocalBase">
    <available file="${base}" property="skipBase" />
  </target>

  <!-- ===================================================================== -->
  <!-- Check out map files from correct repository -->
  <!-- Replace values for mapsCheckoutTag as desired. -->
  <!-- ===================================================================== -->
  <target name="getMapFiles" depends="checkLocalMaps" unless="skipMaps">
    <property name="mapsCheckoutTag" value="HEAD" />
    <cvs cvsRoot="${mapsRepo}"
        package="${mapsRoot}"
        dest="${buildDirectory}/maps"
        tag="${mapsCheckoutTag}" />
  </target>

  <target name="checkLocalMaps">
    <available property="skipMaps" file="${buildDirectory}/maps" />
  </target>

  <target name="tagMapFiles" if="tagMaps">
    <cvs dest="${buildDirectory}/maps/${mapsRoot}" command="tag ${mapsTagTag}" />
  </target>

  <!-- ===================================================================== -->

  <target name="clean" unless="noclean">
    <antcall target="allElements">
      <param name="target" value="cleanElement" />
    </antcall>
  </target>

  <target name="gatherLogs">
    <mkdir dir="${buildDirectory}/${buildLabel}/compilelogs" />
    <antcall target="allElements">
      <param name="target" value="gatherLogs" />
    </antcall>
    <unzip dest="${buildDirectory}/${buildLabel}/compilelogs" overwrite="true">
      <fileset dir="${buildDirectory}/features">
        <include name="**/*.log.zip" />
      </fileset>
    </unzip>
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do before setup -->
  <!-- ===================================================================== -->
  <target name="preSetup">
    <antcall target="tidyup" />
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after setup but before starting the build proper -->
  <!-- ===================================================================== -->
  <target name="postSetup">
    <antcall target="getBaseComponents" />
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do before fetching the build elements -->
  <!-- ===================================================================== -->
  <target name="preFetch">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after fetching the build elements -->
  <!-- ===================================================================== -->
  <target name="postFetch">
    <property name="rapTargetDestFile"
        value="${buildDirectory}/plugins/org.eclipse.rap.ui.intro/target/target.zip" />
    <copy file="${rapTarget}" tofile="${rapTargetDestFile}" />
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do before generating the build scripts. -->
  <!-- ===================================================================== -->
  <target name="preGenerate">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after generating the build scripts. -->
  <!-- ===================================================================== -->
  <target name="postGenerate">
    <antcall target="clean" />
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do before running the build.xmls for the elements being built. -->
  <!-- ===================================================================== -->
  <target name="preProcess">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after running the build.xmls for the elements being built. -->
  <!-- ===================================================================== -->
  <target name="postProcess">
    <antcall target="buildHelp" />
    <antcall target="buildThemingRef" />
  </target>

  <target name="buildHelp">
    <property name="extPointDest"
        value="${buildDirectory}/plugins/org.eclipse.rap.help/help/html/reference/extension-points" />
    <property name="apiDest"
        value="${buildDirectory}/plugins/org.eclipse.rap.help/help/html/reference/api" />
    <property name="tmpTarget" value="${buildDirectory}/target/" />

    <cvs cvsRoot=":pserver:anonymous@dev.eclipse.org:/cvsroot/rt"
        package="org.eclipse.rap/runtime/org.eclipse.rap.ui" dest="${tmpTarget}" />
    <cvs cvsRoot=":pserver:anonymous@dev.eclipse.org:/cvsroot/rt"
        package="org.eclipse.rap/org.eclipse.rap.rwt" dest="${tmpTarget}" />
    <pde.convertSchemaToHTML
        manifest="${tmpTarget}/org.eclipse.rap/runtime/org.eclipse.rap.ui/plugin.xml"
        destination="${extPointDest}" />

    <javadoc
        destdir="${apiDest}"
        author="false"
        version="true"
        use="true"
        windowtitle="Eclipse Rich Ajax Platform API Specification"
        packagenames="org.eclipse.rwt.*"
        excludePackageNames="org.eclipse.rwt.internal.*,org.eclipse.swt.internal.*">
      <fileset dir="${tmpTarget}/org.eclipse.rap/org.eclipse.rap.rwt/src" defaultexcludes="yes">
        <include name="org/eclipse/**/*.java"/>
          <exclude name="org/eclipse/**/internal/**/*.java"/>
        </fileset>

        <doctitle><![CDATA[<h1>Eclipse Rich Ajax Platform API Specification</h1>]]></doctitle>
        <bottom><![CDATA[<font size="-1"><p>Copyright (c) Innoopract Informationssysteme GmbH and others 2002, 2008. All rights reserved.</p></font>]]></bottom>
        <header><![CDATA[<b>Eclipse Rich Ajax Platform</b><br/>Release 1.2]]></header>
      <link href="http://java.sun.com/j2se/1.4.2/docs/api"/>
      <link href="http://bundles.osgi.org/javadoc/r4" />
    </javadoc>
  </target>

  <target name="buildThemingRef"
      description="creates the RWT theming reference">
    <property name="tmpTarget" value="${buildDirectory}/target/" />
    <cvs cvsRoot=":pserver:anonymous@dev.eclipse.org:/cvsroot/rt"
        package="org.eclipse.rap/org.eclipse.rap.rwt"
        dest="${tmpTarget}" />
    <ant dir="theming">
      <property name="src.dir" value="${tmpTarget}/src"/>
      <property name="tmp.dir" value="${tmpTarget}/tmp"/>
      <property name="dest.dir"
          value="${buildDirectory}/plugins/org.eclipse.rap.help/help/html/reference/theming" />
    </ant>
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do before running assemble. -->
  <!-- ===================================================================== -->
  <target name="preAssemble">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after  running assemble. -->
  <!-- ===================================================================== -->
  <target name="postAssemble">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do before running package. -->
  <!-- ===================================================================== -->
  <target name="prePackage">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after  running package. -->
  <!-- ===================================================================== -->
  <target name="postPackage">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do after the build is done. -->
  <!-- ===================================================================== -->
  <target name="postBuild">
    <antcall target="gatherLogs" />
    <antcall target="buildSite" />
    <antcall target="publish" />
    <antcall target="tidyup" />
  </target>

  <target name="buildSite">
    <property name="siteLocation" value="${buildDirectory}/${buildLabel}" />
    <property name="tooling-feature"
      value="${buildDirectory}/${buildLabel}/org.eclipse.rap.tooling-${buildId}.zip" />

    <unzip src="${tooling-feature}" dest="${siteLocation}" />

    <property name="sitePackagePrefix" value="org.eclipse.rap/org.eclipse.rap.tooling-site"/>
    <cvs cvsRoot=":pserver:anonymous@dev.eclipse.org:/cvsroot/rt"
        package="${sitePackagePrefix}"
        dest="${buildDirectory}/temp.updatesite"
        tag="HEAD" />
        
    <!-- Copy to staging area -->
    <property name="UpdateSiteStagingLocation" value="${siteLocation}/site" />
    <copy file="${buildDirectory}/temp.updatesite/${sitePackagePrefix}/site.xml"
        todir="${UpdateSiteStagingLocation}" />
    <copy file="${buildDirectory}/temp.updatesite/${sitePackagePrefix}/index.html"
        todir="${UpdateSiteStagingLocation}" />
    <copy file="${buildDirectory}/temp.updatesite/${sitePackagePrefix}/web/site.css"
        todir="${UpdateSiteStagingLocation}/web" />
    <copy file="${buildDirectory}/temp.updatesite/${sitePackagePrefix}/web/site.xsl"
        todir="${UpdateSiteStagingLocation}/web" />

    <!-- replace qualifiers -->
    <replace file="${UpdateSiteStagingLocation}/site.xml"
        token="1.0.0.200710060032"
        value="${targetVersion}.${buildId}" />

    <!-- zip update site -->
    <zip destfile="${outputDirectory}/${buildLabel}-site.zip"
        basedir="${UpdateSiteStagingLocation}" />

    <!-- pack200 -->
    <!-- antcall target="pack" / -->
  </target>

  <target name="pack">
    <java
        jar="${baseLocation}/plugins/org.eclipse.equinox.launcher_1.0.1.R33x_v20080118.jar"
        fork="true"
        timeout="10800000"
        jvm="${java15-home}/bin/java"
        failonerror="true"
        maxmemory="768m"
        error="${buildDirectory}/errorlog.txt"
        dir="${buildDirectory}"
        output="${buildDirectory}/jarprocessorlog.txt">

      <arg line="-consolelog -application org.eclipse.update.core.siteOptimizer" />
      <arg line="-jarProcessor -verbose -outputDir ${outputDirectory} -processAll -pack ${outputDirectory}/${buildLabel}-site.zip" />
    </java>
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do to test the build results -->
  <!-- ===================================================================== -->
  <target name="test">
  </target>

  <!-- ===================================================================== -->
  <!-- Steps to do to publish the build results -->
  <!-- ===================================================================== -->
  <target name="publish">
    <!-- copydir dest="${outputDirectory}" src="${buildDirectory}/${buildLabel}" / -->
  </target>

  <!-- ===================================================================== -->
  <!-- Default target                                                        -->
  <!-- ===================================================================== -->
  <target name="noDefault">
    <echo message="You must specify a target when invoking this file" />
  </target>

  <target name="tidyup">
    <delete defaultexcludes="false" includeEmptyDirs="true"
        dir="${buildDirectory}" />
    <echo>Deleting all build resources</echo>
  </target>
</project>
