<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

  <extension
      id="org.eclipse.rap.demo.demoentrypoint"
      point="org.eclipse.rap.ui.workbench.entrypoint">
    <entrypoint
        class="org.eclipse.rap.demo.DemoWorkbench"
        parameter="default"/>
    <entrypoint
        class="org.eclipse.rap.demo.RWTDemo"
        parameter="rwtdemo"/>
    <entrypoint
        class="org.eclipse.rap.demo.controls.LayoutDemo"
        parameter="layout"/>
    <entrypoint
        class="org.eclipse.rap.demo.controls.ControlsDemo"
        parameter="controls"/>
  </extension>
  
    <extension
        point="org.eclipse.ui.perspectives">
     <perspective
           class="org.eclipse.rap.demo.Perspective"
           id="org.eclipse.rap.demo.perspective"
           name="Demo Perspective"/>
  </extension> 
  
  <extension point="org.eclipse.ui.views"> 
      <view
            category="one"
            class="org.eclipse.rap.demo.DemoTreeViewPart"
            icon="icons/contact.gif"
            id="org.eclipse.rap.demo.DemoTreeViewPartI"
            name="View I"/> 
      <view
            category="one"
            class="org.eclipse.rap.demo.DemoTreeViewPart"
            icon="icons/info.gif"
            id="org.eclipse.rap.demo.DemoTreeViewPartII"
            name="View II"/> 
      <view
            category="one"
            class="org.eclipse.rap.demo.DemoTreeViewPart"
            icon="icons/login.gif"
            id="org.eclipse.rap.demo.DemoTreeViewPartIII"
            name="View III"/> 
      <view
            category="two"
            class="org.eclipse.rap.demo.DemoTreeViewPart"
            icon="icons/register.gif"
            id="org.eclipse.rap.demo.DemoTreeViewPartIV"
            name="View V"/> 
      <view
            category="two"
            class="org.eclipse.rap.demo.DemoTableViewPart"
            icon="icons/search.gif"
            id="org.eclipse.rap.demo.DemoTableViewPart"
            name="View IV"/> 
      <view
            category="two"
            class="org.eclipse.rap.demo.DemoSelectionViewPart"
            icon="icons/status.gif"
            id="org.eclipse.rap.demo.DemoSelectionViewPart"
            name="Selection View"/> 
      <view
            category="two"
            class="org.eclipse.rap.demo.DemoBrowserViewPart"
            icon="icons/internal_browser.gif"
            id="org.eclipse.rap.demo.DemoBrowserViewPart"
            name="Browser"/>
      <category
            id="one"
            name="Category 1"/>
      <category
            id="two"
            name="Category 2"/>
   </extension>
  
</plugin>
